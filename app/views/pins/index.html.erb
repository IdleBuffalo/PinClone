<div id="pins" class='transitions-enabled'> 
  <% @pins.each do |pin| %> 
  <div class="box panel panel-default">
    <%= image_tag pin.image.url(:medium) %>
    <div class="panel-body">
      <%= pin.description %>
      <%= pin.user.email if pin.user %>
      <%= link_to 'Show', pin %><!-- pin is the same as pin_path -->
      <% if pin.user == current_user %>
      <td><%= link_to 'Edit', edit_pin_path(pin) %>
      <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </div> <!-- Super important that you close box tukaj, ker drugac je vse misaligned -->
  <% end %>
</div>
